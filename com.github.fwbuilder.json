{
    "id": "com.github.fwbuilder",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "fwbuilder",
    "rename-icon": "fwbuilder.png",
    "rename-desktop-file": "fwbuilder.destkop",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "net-snmp",
            "buildsystem": "autotools",
            "builddir": true,
            "build-options": {
                "ldflags": "-lncurses -ltinfo"
            },
            "sources": [
                {
                    "type": "git",
                    "commit": "9e933893751fb5b1b68c6efb844ef5d4b3a905e0",
                    "url": "https://github.com/net-snmp/net-snmp"
                }
            ]
        },
        {
            "name": "fwbuilder",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "build-options": {
                "env": {
                "NETSNMP_INCLUDE_DIR": "/app/lib"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "commit": "a5e14a966447c63bcf7b52a0202149e76bd5ed4a",
                    "url": "https://github.com/fwbuilder/fwbuilder"
                }
            ]
        }
    ]
}
