{
    "id": "com.github.fwbuilder",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "fwbuilder",
    "rename-icon": "fwbuilder",
    "rename-desktop-file": "fwbuilder.desktop",
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=x11"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "net-snmp",
            "buildsystem": "autotools",
            "builddir": true,
            "build-options": {
                "ldflags": "-lncurses -ltinfo"
            },
            "sources": [
                {
                    "type": "git",
                    "commit": "9e933893751fb5b1b68c6efb844ef5d4b3a905e0",
                    "url": "https://github.com/net-snmp/net-snmp"
                }
            ]
        },
        {
            "name": "fwbuilder",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DNETSNMP_INCLUDE_DIR=/app/include"
	        ],
            "sources": [
                {
                    "type": "git",
                    "commit": "ea25d1e557d45d10d4354cf1435633b5d37edf3d",
                    "url": "https://github.com/fwbuilder/fwbuilder"
                }
            ]
        }
    ]
}
